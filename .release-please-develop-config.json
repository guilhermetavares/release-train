{
    "packages": {
        ".": {
            "changelog-path": "DEVELOP-CHANGELOG.md",
            "release-type": "simple",
            "label": "develop",
            "release-label": "develop",
            "tag-prefix": "develop-",
            "component": "develop",
            "include-component-in-tag": true,
            "bump-minor-pre-major": false,
            "bump-patch-for-minor-pre-major": false,
            "draft": false,
            "prerelease": false,
            "group-pull-request-title-pattern": "chore${scope}: release  develop-v${version}",
            "pull-request-title-pattern": "chore${scope}: release ${component} v${version}",
            "changelog-type": "default"
        }
    }
}
